
#include <equip.h>

inherit WEAPON;

// 函数：适用门派
int get_family() { return 6; }

// 函数：构造处理
void create()
{
        set_name("如意金箍棒");
        set_picid_1(7523);
        set_picid_2(7523);
        set_unit("根");

        set_level(130);
        set_value(57000);
        set_max_lasting(27599);
        set("ap", 290);
        set("!%", 12);
        set("spec.hp", 88);
        set("spec.hp*", 4);
        set("spec.mp*", 4);

        setup();

        set_weapon_type(STICK);
}

// 函数：获取武器级别
int get_weapon_level() { return 23; }

// 函数：获取描述
string get_desc()
{
        return "“棍法”装备";
}
