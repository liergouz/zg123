
#include <equip.h>

inherit WEAPON;

// 函数：适用门派
int get_family() { return 1; }

// 函数：构造处理
void create()
{
        set_name("紫煞护手");
        set_picid_1(7023);
        set_picid_2(7023);
        set_unit("双");

        set_level(130);
        set_value(57000);
        set_max_lasting(27599);
        set("ap", 283);
        set("!%", 25);
        set("spec.hp", 198);
        set("spec.hp*", 4);
        set("spec.mp*", 4);

        setup();

        set_weapon_type(UNARMED);
}

// 函数：获取武器级别
int get_weapon_level() { return 23; }

// 函数：获取描述
string get_desc()
{
        return "“拳法”装备";
}
