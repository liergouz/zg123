mapping	goodprice = ([ ]);

void create()
{
	string cpp, *line;
	int i, size, a,	b, c, d, ret;
	cpp = read_file("/quest/good.dat");
	if (!cpp)
	{
		return;
	}
	line = explode(	cpp, "\n" );
	size = sizeof(line);
	if (size==0) return;
	for (i=0;i<size;i++)
	{		
		if (sscanf(line[i], "%d %d %d %d", a, b, c, d)!=4) 
		{
			continue;	
		}
		goodprice[a] = ({b, c, d });
	}
}

